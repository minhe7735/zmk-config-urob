// use global-quick-tap-ms for combos (requires PR 1387)
#undef COMBO_HOOK
#define COMBO_HOOK global-quick-tap-ms = <100>;

#define COMBO_TERM_FAST 20
#define COMBO_TERM_SLOW 35

//layers
ZMK_COMBO(normal,       &to DEF,            RT2 RT3,     DEF SYM NUM FN GENSHIN MOUSE, COMBO_TERM_FAST)
ZMK_COMBO(functions,    &sl FN,             RB2 RB3,     DEF,                          COMBO_TERM_FAST)
ZMK_COMBO(genshin,      &to GENSHIN,        RT0 RT4,     DEF,                          COMBO_TERM_FAST)

//utilities
ZMK_COMBO(move_window,  &kp LG(LS(LEFT)),   LT3 LT2,     DEF,                          COMBO_TERM_FAST)
ZMK_COMBO(maximize,     &kp LG(UP),         LT3 LT2 LT1, DEF,                          COMBO_TERM_FAST)
ZMK_COMBO(copy,         &kp LC(C),          LB3 LB2,     DEF,                          COMBO_TERM_FAST)
ZMK_COMBO(paste,        &kp LC(V),          LB2 LB1,     DEF,                          COMBO_TERM_FAST)
ZMK_COMBO(cut,          &kp LC(X),          LB3 LB1,     DEF,                          COMBO_TERM_FAST)

//reset
ZMK_COMBO(lReset,       &sys_reset,         LH2 LH1 LH0,     DEF SYM NUM FN GENSHIN MOUSE, COMBO_TERM_FAST)
ZMK_COMBO(rReset,       &sys_reset,         RH0 RH1 RH2,     DEF SYM NUM FN GENSHIN MOUSE, COMBO_TERM_FAST)

//bootloader
ZMK_COMBO(lBootL,       &bootloader,        LH2 LH1 LH0 LB0,     DEF SYM NUM FN GENSHIN MOUSE, COMBO_TERM_FAST)
ZMK_COMBO(rBootL,       &bootloader,        RH2 RH1 RH2 RB0,     DEF SYM NUM FN GENSHIN MOUSE, COMBO_TERM_FAST)
