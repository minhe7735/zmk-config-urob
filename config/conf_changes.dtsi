/* config changes */

&sk {  // sticky-key
    release-after-ms = <600>;
    quick-release;
};

&sl {  // sticky-layer
    ignore-modifiers;
};

&mt {
    flavor = "tap-preferred";
};
&lt {  // layer-tap
    flavor = "balanced";
    tapping-term-ms = <200>;
    quick-tap-ms = <QUICK_TAP_MS>;
};

&mmv {
  acceleration-exponent = <1>;      // 1
  time-to-max-speed-ms = <1500>;    // 40
  delay-ms = <0>;                   // 0
};

&msc {
  acceleration-exponent = <1>;      // 0
  time-to-max-speed-ms = <5000>;    // 40
  delay-ms = <0>;                   // 10
};

&caps_word {  // mods deactivate caps-word, requires PR #1441
    /delete-property/ ignore-modifiers;
};

&leader {
    timeout-ms = <200>;
    timerless;
};